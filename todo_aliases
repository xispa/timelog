# TODO aliases
alias t="~/.todo/todo.sh -d ~/.todo/todo.cfg -t"
alias tl='t list'
alias ta='tl "(A)"'
alias tb='tl "(B)"'
alias tc='tl "(C)"'
alias td='tl "(D)"'
alias te='tl "(E)"'

# summary of TODO tasks by term/project
r() {
  term=$1;
  lines=${2:-10};

  printf "\033[0;37m:: CLOSED\n";
  d "$term" $lines;
  printf "\033[0m\n";

  printf "\033[0;34m:: DONE\033[0m\n";
  td "$term" | grep -v "TODO: \|--";
  echo "";

  printf "\033[1;34m:: ON HOLD\033[0m\n";
  tc "$term" | grep -v "TODO: \|--";
  echo "";

  printf "\033[1;31m:: ACTIVE\033[0m\n";
  ta "$term" | grep -v "TODO: \|--";
  echo "";

  printf "\\033[1;33m:: NEXT\033[0m\n";
  tb "$term" | grep -v "TODO: \|--";
  echo "";

  printf ":: BACKLOG\n";
  tl "$term" | grep -v " (\w) ";
}

# done TODO tasks for term/project
d() {
  term=$1;
  lines=${2:-10};
  cat ~/.todo/done.txt | grep "$term" | tail -$lines | a>
}
